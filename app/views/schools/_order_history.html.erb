<% unless @orders.empty? %>
  <div class="panel clearfix">
    <h4>Order History</h4>
    <ul>
      <% @orders.each do |order| %>
      	<% if ((!current_user.nil? && current_user.id == order.user_id) ||
           admin? || manager?) %>
        	<%= link_to 'Order Number ' + order.id.to_s , order_path(order)   %>
        	<br />
        <% else %>
        	<p> Order by another user </p>
        	
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

 <div class="digg_pagination " id="digg_pagination"><%= will_paginate @orders, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %> </div>