<%= form_for @school do |f| %>
  <fieldset>
    <div class="row">
      <div class="small-4 small-centered columns userCenter" >
    <legend><h3><%= controller.action_name.capitalize %> School</h3></legend>
      </div>
    </div>

<% if @school.errors.any? %>
  <div class="row">
    <div class="medium-1 columns" style="width: 16%;" >
     &nbsp;
    </div>
    <div class="medium-8 columns" >
          <div id="error_explanation">
            <p><%= pluralize(@school.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.count, 
              "error") %> prohibited this school from being saved:<p>

            <ul>
            <% @school.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
    </div>
      <div class="medium columns" style="width: 16%;" >
     &nbsp;
    </div>
  </div>
 <% end %>


      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-8 columns" >
              <p>
                <%= f.label :name %><br />
                <%= f.text_field :name, input_html: {class: "avg"} %>
              </p>
        </div>
        
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>



      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
              <p>
                <%= f.label 'Street Address Line 1' %><br />
                <%= f.text_field :street_1, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium-4 columns" >
              <p>
                <%= f.label 'Street Address Line 2' %><br />
                <%= f.text_field :street_2, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>


      <div class="row">
        <div class="medium- columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
              <p>
                <%= f.label :city %><br />
                <%= f.text_field :city, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium-2 columns" >
              <p>
               <%= f.label :state %><br />
               <%= f.select :state, collection: School::STATES_LIST %>
              </p>
        </div>
        <div class="medium-2 columns" >
              <p>
                <%= f.label :zip %><br />
                <%= f.text_field :zip, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>


      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
              <p>
                 <%= f.label :min_grade %><br />
                <%= f.text_field :min_grade, input_html: {class: "avg"} %>
              </p>
        </div>

        <div class="medium-4 columns" >
                <p>
               <%= f.label :max_grade %><br />
                <%= f.text_field :max_grade, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>

<% if admin? || manager? %>
      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
        <p>
                <%= f.check_box :active %>
                 Active </p>

        </div>

      
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>
  <% end %>




    <div class="form-actions">
    <div class="row">
     <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
      <div class="medium-4 columns " style="text-align:right;" >
        <%= f.submit nil, :class => 'button radius' %>
      </div>

      <div class="medium-4 columns " >
        <%= link_to 'Cancel', schools_path, :class => 'button alert radius' %>
      </div>
      <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
    </div>
    </div>
  </fieldset>
<% end %>