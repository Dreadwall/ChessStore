<%= simple_form_for @item_price, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Price</legend>

     <% if @item_price.errors.any? %>
          <div id="error_explanation">
            <p><%= pluralize(@item_price.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.count, 
              "error") %> prohibited this item from being saved:<p>

            <ul>
            <% @item_price.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <%= f.input :item_id, collection: Item.active.to_a, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :price, label: 'New Price', input_html: {class: "avg"} %>
	<%= f.select :category, ['wholesale', 'manufacturer']%>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', item_prices_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>