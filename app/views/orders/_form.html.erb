<%= form_for @order do |f| %>
  <fieldset>
    <div class="row">
      <div class="small-4 small-centered columns userCenter" >
    <legend><h3>Order Information</h3></legend>
      </div>
    </div>

<% if @order.errors.any? %>
  <div class="row">
    <div class="medium-1 columns" style="width: 16%;" >
     &nbsp;
    </div>
    <div class="medium-8 columns" >
          <div id="error_explanation">
            <p><%= pluralize(@order.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.count, 
              "error") %> prohibited this order from being placed:<p>

            <ul>
            <% @order.errors.messages.map{|key, val| key.to_s + ' ' + val[0]}.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
    </div>
      <div class="medium columns" style="width: 16%;" >
     &nbsp;
    </div>
  </div>
 <% end %>


      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-8 columns" >
              <p>
                Grand Total: <%= number_to_currency(@shipping.to_f + @subtotal.to_f) %>
                <%= f.label :credit_card_number %><br />
                <%= f.text_field :credit_card_number, input_html: {class: "avg"} %>
              </p>
        </div>
        
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>



      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
              <p>
                <%= f.label :expiration_month %><br />
                <%= f.text_field :expiration_month, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium-4 columns" >
              <p>
                <%= f.label :expiration_year %><br />
                <%= f.text_field :expiration_year, input_html: {class: "avg"} %>
              </p>
        </div>
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>


      <div class="row">
        <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
        <div class="medium-4 columns" >
              <p>
               <%= f.label :school %><br />
               <% school_array = School.all.map { |school| [school.name + ' [' + school.zip + ']', school.id] } %>
               <%= f.select :school_id, school_array %>
              </p>
        </div>
       
        <div class="medium-2 columns" >
             
        </div>
        <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
      </div>



    <div class="form-actions">
    <div class="row">
     <div class="medium-1 columns" style="width: 16%;" >
         &nbsp;
        </div>
      <div class="medium-4 columns " style="text-align:right;" >
        <%= f.submit nil, :class => 'button radius' %>
      </div>

      <div class="medium-4 columns " >
        <%= link_to 'Cancel', cart_path, :class => 'button alert radius' %>
      </div>
      <div class="medium columns" style="width: 16%;" >
         &nbsp;
        </div>
    </div>
    </div>
  </fieldset>
<% end %>